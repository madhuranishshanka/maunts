    <groupId>com.devspace</groupId>
    <artifactId>maunts</artifactId>
    <packaging>pom</packaging>
    <version>1.0-SNAPSHOT</version>
    <name>Maunts</name>
    <description>The ultimate hotel reservation system</description>


    <organization>
        <name>Devspace Inc.,</name>
        <url>http://localhost</url>
    </organization>


    <issueManagement>
        <system>Bugzilla</system>
        <url>https://bugzilla.wakaleo.com/</url>
    </issueManagement>

